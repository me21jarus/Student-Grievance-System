<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Academics</title>
    <style>
        .logo {
            display: flex;
            justify-content: space-around;
            padding: 20px 0px;
        }

        a {
            text-decoration: none;
            margin: 10px;
        }

        a:hover {
            text-decoration: underline;
            color: rgb(37, 47, 227);
        }

        .c2 {
            color: aqua;
        }

        .dep {
            text-align: center;
            text-decoration: underline;
        }

        .section {
            text-align: center;
            text-decoration: none;
        }

        .head {
            margin: 20px;
        }

        .table {
            margin: 10px;
            text-align: center;
        }

        .tabrow {
            text-align: center;
        }

        .des {
            text-align: center;
            width: 400px;
            height: 200px;
            border-radius: 10px;
        }

        .su {
            border-radius: 10px;
        }

        .check {
            font-size: medium;
        }

        body {
            padding: 25px;
            background-color: white;
            color: black;
            font-size: 25px;
        }

        .dark-mode {
            background-color: black;
            color: white;
        }
    </style>
</head>

<body>
    <div class="logo">
        <div class="c1">
            <img src="/download.png" alt="logo">
        </div>
        <div class="c2">
            <a href="/complent">Home</a>
            <a href="/About">About</a>
            <a href="/contact">Contact Us</a>
            <button onclick="myFunction()">Dark mode</button>
        </div>
    </div>
    <div class="dep">
        <h1>Information Science and Technology</h1>
    </div>
    <br><br>
    <form action="order">
        <div class="section">

            <label for="Semester">Semester</label>
            <select name="Sem" id="Sem">
                <option value="A">I</option>
                <option value="B">II</option>
                <option value="C">III</option>
                <option value="C">IV</option>
                <option value="C">V</option>
                <option value="C">VI</option>
                <option value="C">VII</option>
                <option value="C">VIII</option>
            </select>
            <br>
            <br>

            <label for="Sec">Section</label>
            <select name="Sec" id="Sec">
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
            </select>
            <br>
            <br>

            <label for="Sec">Subject Code</label>
            <select name="code" id="code">
                <option value="A">IS41</option>
                <option value="B">IS42</option>
                <option value="C">IS43</option>
                <option value="D">IS44</option>
                <option value="E">IS45</option>
            </select>
            <br>
            <br>

            <input class="des" type="textarea" placeholder="Describe The Problem"><br><br>
            <input class="check" type="checkbox" name="check" id="check" checked>
            <label class="check" for="check">Notify all my classmates</label><br><br>
            <input class="su" type="submit" value="Submit">
        </div>
    </form>
    <script>
        function myFunction() {
            var element = document.body;
            element.classList.toggle("dark-mode");
        }
    </script>

</body>

</html>